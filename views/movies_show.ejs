<!DOCTYPE html>
<html>
<%- include('partials/head',{title : movie.title}) %> 
  <body>
    <%- include('partials/header') %> 

    <main class="container">
        <section class="row">
            <div class="col-8">
                <div class="card mb-3">
                    <div class="row g-0">
                      <div class="col-md-4">
                        <img src="..." class="img-fluid rounded-start" alt="proximamente imagen">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title"><%= movie.title %> </h5>
                          <p class="card-text">Rating: <%= movie.rating %> </p>
                          <p class="card-text">Premios: <%= movie.awards %> </p>
                          <p class="card-text"><small class="text-muted">Fecha de estreno: <%= movie.release_date.toLocaleDateString() %> </small></p>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
        </section>
    </main>



    <%- include('partials/scripts') %> 

  </body>
</html>
